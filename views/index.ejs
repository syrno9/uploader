<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Uploader</title>
</head>
<body>
    <h1>Uploaded Images</h1>
    <ul>
        <% files.forEach(file => { %>
            <li>
                <img src="/banners/uploads/<%= file.filename %>" alt="<%= file.name %>" style="max-width: 200px;">
                <p>Original Name: <%= file.name %></p>
                <p>Upload Date: <%= new Date(file.date).toLocaleString() %></p>
            </li>
        <% }) %>
    </ul>
    <a href="/banners/upload">Upload a new image</a>
</body>
</html>
